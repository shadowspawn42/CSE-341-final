<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/prove04/forms.css">
    <link rel="stylesheet" href="/stylesheets/prove04/product.css">
</head>

<body>
    <% include ../../../../includes/nav.ejs %>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class=" text-center" action="/proveAssignments/prove04/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div >
                <label for="title">Title</label><br>
                <input type="text" size="50" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            </div><br>
            <div >
                <label for="publisher">Publisher</label><br>
                <input type="text" size="50" name="publisher" id="publisher" value="<% if (editing) { %><%= product.publisher %><% } %>">
            </div><br>
            <div >
                <label for="developer">Developer</label><br>
                <input type="text" size="50" name="developer" id="developer" value="<% if (editing) { %><%= product.developer %><% } %>">
            </div><br>
            <div >
                <label for="esrb">ESRB</label><br>
                <input type="text" size="50" name="esrb" id="esrb" value="<% if (editing) { %><%= product.esrb %><% } %>">
            </div><br>
            <div >
                <label for="imageUrl">Image URL</label><br>
                <input type="text" size="50" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
            </div><br>
            <div >
                <label for="price">Price</label><br>
                <input type="number" size="50" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>">
            </div><br>
            <div >
                <label for="description">Description</label><br>
                <textarea name="description" cols="50" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div><br>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn product-form" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>