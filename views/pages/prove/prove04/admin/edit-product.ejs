<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/prove04/forms.css">
    <link rel="stylesheet" href="/stylesheets/prove04/product.css">
</head>

<body>
    <% include ../../../../includes/nav.ejs %>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class=" text-center" action="/proveAssignments/prove04/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div >
                <label for="title">Title</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    size="50" 
                    name="title" 
                    id="title" 
                    value="<% if (editing || hasError) { %><%= product.title %><% } %>">
            </div><br>
            <div >
                <label for="publisher">Publisher</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'publisher') ? 'invalid' : '' %>"
                    type="text" 
                    size="50" 
                    name="publisher" 
                    id="publisher" 
                    value="<% if (editing || hasError) { %><%= product.publisher %><% } %>">
            </div><br>
            <div >
                <label for="developer">Developer</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'developer') ? 'invalid' : '' %>"
                    type="text" 
                    size="50" 
                    name="developer" 
                    id="developer" 
                    value="<% if (editing || hasError) { %><%= product.developer %><% } %>">
            </div><br>
            <div >
                <label for="esrb">ESRB</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'esrb') ? 'invalid' : '' %>"
                    type="text" 
                    size="50" 
                    name="esrb"
                    id="esrb" 
                    value="<% if (editing || hasError) { %><%= product.esrb %><% } %>">
            </div><br>
            <div >
                <label for="imageUrl">Image URL</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid' : '' %>"
                    type="text" 
                    size="50" 
                    name="imageUrl" 
                    id="imageUrl" 
                    value="<% if (editing || hasError) { %><%= product.imageUrl %><% } %>">
            </div><br>
            <div >
                <label for="price">Price</label><br>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>"
                    type="number" 
                    size="50" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing || hasError) { %><%= product.price %><% } %>">
            </div><br>
            <div >
                <label for="description">Description</label><br>
                <textarea 
                    class="<%= validationErrors.find(e => e.param === 'description') ? 'invalid' : '' %>"
                    name="description" 
                    cols="50" 
                    id="description" 
                    rows="5"><% if (editing || hasError) { %><%= product.description %><% } %></textarea>
            </div><br>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
                <div class="text-center">
                    <input type="radio" id="inStock" name="inStock" value="inStock">
                    <label for="inStock">In Stock</label>
                    <input type="radio" id="outStock" name="outStock" value="outOfStock">
                    <label for="outStock">Out of Stock</label>
                </div>
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn product-form" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>