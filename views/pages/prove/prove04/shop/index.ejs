<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/prove04/product.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
</head>

<body>
    <% include ../../../../includes/nav.ejs %>
    

    <div class="jumbotron text-center" style="padding-bottom: 0px">
        <div class="container">
          <h1><%= pageTitle %></h1>
          <h3>Intersting Fact of the Week</h3>
          <p>Did you know that during the 2018/2019 crop marketing year, (Sept. 1 - Aug. 31) the United States grew more then 14.42 billion bushels or 366 million metric tons of corn.</p>
        </div>
    </div>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h3 style="text-align: center;"><%= product.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.name %>">
                        </div>
                        <div class="card__content" style="margin-bottom: -2rem;">
                            <h4 class="product__description">Total Time: <%= product.totalTime %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/proveAssignments/prove04/products/<%= product._id %>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </article>
                <% } %>
            </div>
            <div class="text-center">
                <section class="pagination">
                    <% if (currentPage !== 1 && previousPage !== 1) { %>
                        <a href="?page=1">1</a>
                    <% } %>
                    <% if (hasPreviousPage) { %>
                        <a href="?page=<%= previousPage %>"><%= previousPage %></a>
                    <% } %>
                    <a href="?page=<%= currentPage %>" class="active"><%= currentPage %></a>
                    <% if (hasNextPage) { %>
                        <a href="?page=<%= nextPage %>"><%= nextPage %></a>
                    <% } %>
                    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
                        <a href="?page=<%= lastPage %>"><%= lastPage %></a>
                    <% } %>
                </section>
            </div>
        <% } else { %>
            <h1>No Recipes Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>