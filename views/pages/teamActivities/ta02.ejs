<!DOCTYPE html>
<html>
<head>
  <% include ../../includes/header.ejs %>
</head>

<body>
  <% include ../../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
    <p>This is the placeholder for Team Activity 02</p>
  </div>
</div>
<div class="container">
    <form action="/ta02/addUser" method="POST">
      <label for="title">Name</label>
      <input type="text" name="name" id="name">
      <button>Submit Name</button>
    </form>
    <% if(names.length > 0) {%>
      <form action="/ta02/removeUser" method="POST">
        <label for="title">Remove Name</label>
        <input type="text" name="name" id="name">
        <button>Remove Name</button>
      </form>
    <% } %>
    <% if(names.length > 0) {%>
      <div class="grid">
        <ul>
          <% for(let users of names) { %>
              <li><%= users.name%></li>
          <% } %>
        </ul>
      </div>
  <% } else { %>
      <h1>No Users Found</h1>
  <% } %>
  
</div>


</body>
</html>